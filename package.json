{
  "name": "keysplit",
  "version": "0.0.4",
  "description": "Simple, independently audited, zero-dependency TypeScript implementation of Shamir's Secret Sharing algorithm",
  "keywords": [
    "shamir",
    "secret",
    "sharing",
    "threshold",
    "cryptography",
    "crypto",
    "keys",
    "mnemonic",
    "typescript",
    "node",
    "browser",
    "web3"
  ],
  "browser": {
    "node:crypto": false
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./csprng": {
      "types": "./dist/csprng.d.ts",
      "node": {
        "import": "./dist/esm/csprng.node.js",
        "require": "./dist/cjs/csprng.node.js"
      },
      "import": "./dist/esm/csprng.js",
      "require": "./dist/cjs/csprng.js"
    }
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist 2> /dev/null; echo clean",
    "prebuild": "npm run clean",
    "build": "tsc && tsc -p tsconfig.esm.json && mkdir -p dist/esm && cp esm/package.json dist/esm/package.json",
    "lint": "prettier --check 'src/**/*.ts' 'test/**/*.js'",
    "pretest": "npm run build",
    "test": "jest --testMatch \"**/test/**/*.test.js\"",
    "prepublishOnly": "npm run build"
  },
  "author": "Onoal",
  "homepage": "https://github.com/onoal/Onoal-KeySplit#readme",
  "bugs": {
    "url": "https://github.com/onoal/Onoal-KeySplit/issues"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/onoal/Onoal-KeySplit.git"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "jest": "^29.5.0",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  }
}
